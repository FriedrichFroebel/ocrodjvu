PYTHON=${PYTHON:-python}
py2diatra=$(command -v py2diatra) || { echo py2diatra not found >&2; exit 1; }
if [ $# -eq 0 ]
then
    set -- \
        $(grep -l -r '^#!.*python' .) \
        $(find . -name '*.py')
fi
# It would be tempting to use "python -m py2diatra" here,
# but that doesn't work in Python 2.6.
exec "$PYTHON" "$py2diatra" "$@"

