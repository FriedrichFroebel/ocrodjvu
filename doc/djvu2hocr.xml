    <refname>&p;</refname>
    <refpurpose>DjVu to hOCR converter</refpurpose>
</refnamediv>

<refsynopsisdiv>
    <cmdsynopsis>
        <command>&p;</command>
        <arg choice='opt' rep='repeat'><replaceable>option</replaceable></arg>
        <arg choice='plain'><replaceable>djvu-file</replaceable></arg>
    </cmdsynopsis>
